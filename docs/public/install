#!/usr/bin/env fish

if test (id -u) -eq 0
	echo "This script should not be run as root"
	exit 1
end

set dotfiles_repository "https://github.com/tednaaa/dotfiles"


sudo pacman -Syu --noconfirm


if not command -s rustup
	curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
end
if not command -s mise
	curl https://mise.run | sh
	mise use node@22
end
if not command -s paru
	sudo pacman -S --noconfirm --needed base-devel git
	git clone https://aur.archlinux.org/paru.git
	cd paru
	makepkg -si --noconfirm --needed
end

if not test -d ~/dotfiles
	git clone $dotfiles_repository ~/dotfiles
end

paru -S --noconfirm --needed symm
symm unlink
symm link


set packages

set cli_tools \
	alacritty wezterm neovim starship \
	btop ripgrep zoxide eza fd bat yazi fzf \
	jq git-delta resvg lazygit \
	docker docker-compose lazydocker \
	openbsd-netcat openssh rsync cmake
set packages $packages $cli_tools

set hyprland_desktop \
	uwsm libnewt \
	hyprland hyprpaper hyprlock hyprshot \
	xdg-desktop-portal-hyprland xdg-desktop-portal-gtk \
	brightnessctl waybar mako walker-bin nwg-look power-profiles-daemon
set packages $packages $hyprland_desktop

set apps \
	ueberzugpp mpv clipse bluetui \
	dolphin pavucontrol 7zip \
	obs-studio telegram-desktop \
	firefox google-chrome
set packages $packages $apps

set fonts ttf-jetbrains-mono-nerd noto-fonts-cjk noto-fonts-extra
set packages $packages $fonts

set nvidia_drivers nvidia nvidia-utils
set packages $packages $nvidia_drivers

paru -S --noconfirm --needed $packages

systemctl enable docker.socket
sudo usermod -aG docker $USER

rfkill unblock bluetooth
systemctl enable bluetooth
