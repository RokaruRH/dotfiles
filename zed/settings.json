{
  "vim_mode": true,
  "vim": { "use_system_clipboard": "always", "use_smartcase_find": true },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 10,

  "theme": "Zedokai",
  "icon_theme": "Catppuccin Mocha",

  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 500,
  "buffer_font_size": 15.0,
  "buffer_line_height": { "custom": 1.8 },
  "buffer_font_features": { "calt": false },

  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_weight": 500,
  "ui_font_size": 16,

  "terminal": {
    "toolbar": { "breadcrumbs": false },
    "line_height": { "custom": 1.5 },

    "detect_venv": { "on": { "activate_script": "fish" } }
  },

  "cursor_blink": false,
  "project_panel": { "auto_fold_dirs": false },
  "indent_guides": { "enabled": true },
  "tabs": { "file_icons": true },
  "tab_size": 2,
  "hard_tabs": true,
  "show_whitespaces": "selection",

  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "TSX": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "Vue.js": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "Python": {
      "hard_tabs": false,
      "tab_size": 4,
      "formatter": {
        "external": { "command": "black", "arguments": ["-"] }
      }
    }
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": { "check": { "command": "clippy" } },
      "binary": { "ignore_system_version": true }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off"
        }
      }
    }
  },

  "git": { "inline_blame": { "enabled": false } },

  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "features": { "edit_prediction_provider": "supermaven" },
  "show_edit_predictions": true,

  "auto_install_extensions": {
    "intellij-newui-theme": true,
    "tokyo-night": true,
    "one-dark-pro": true,
    "github-theme": true,

    "catppuccin": true,
    "catppuccin-icons": true,

    "astro": true,
    "basher": true,
    "cargo-tom": true,
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "env": true,
    "fish": true,
    "git-firefly": true,
    "golangci-lint": true,
    "graphql": true,
    "html": true,
    "http": true,
    "log": true,
    "make": true,
    "nginx": true,
    "prisma": true,
    "scss": true,
    "snippets": true,
    "sql": true,
    "svelte": true,
    "terraform": true,
    "toml": true,
    "vue": true,
    "wakatime": true,
    "xml": true
  }
}
