{
	"vim_mode": true,
	"vim": { "use_system_clipboard": "always" },
	"relative_line_numbers": true,
	"vertical_scroll_margin": 10,

	"theme": "Catppuccin Mocha",
	"buffer_font_family": "JetBrainsMono Nerd Font",
	"ui_font_family": "JetBrainsMono Nerd Font",
	"buffer_font_features": { "calt": false },
	"cursor_blink": false,
	"ui_font_size": 16,
	"buffer_line_height": { "custom": 1.8 },
	"buffer_font_size": 15,

	"indent_guides": { "enabled": true },
	"tabs": { "file_icons": true },
	"tab_size": 2,
	"hard_tabs": true,
	"show_whitespaces": "selection",
	"soft_wrap": "editor_width",

	"lsp": {
		"rust-analyzer": {
			"initialization_options": { "check": { "command": "clippy" } }
		}
	},

	"features": { "inline_completion_provider": "supermaven" },
	"show_inline_completions": true,

	"git": { "inline_blame": { "enabled": false } },

	"auto_install_extensions": {
		"astro": true,
		"basher": true,
		"cargo-tom": true,
		"catppuccin": true,
		"docker-compose": true,
		"dockerfile": true,
		"emmet": true,
		"env": true,
		"fish": true,
		"git-firefly": true,
		"github-theme": true,
		"golangci-lint": true,
		"graphql": true,
		"html": true,
		"http": true,
		"log": true,
		"make": true,
		"nginx": true,
		"one-dark-pro": true,
		"prisma": true,
		"scss": true,
		"snippets": true,
		"sql": true,
		"svelte": true,
		"terraform": true,
		"toml": true,
		"vue": true,
		"wakatime": true,
		"xml": true
	}
}
