{
  "vim_mode": true,
  "terminal": { "toolbar": { "breadcrumbs": false } },
  "vim": { "use_system_clipboard": "always", "use_smartcase_find": true },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 10,

  "theme": "One Dark Pro",

  "buffer_font_family": "Maple Mono NF",
  "buffer_font_weight": 500,
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.8 },
  "buffer_font_features": { "calt": false },

  "ui_font_family": "Maple Mono NF",
  "ui_font_weight": 500,
  "ui_font_size": 16,

  "cursor_blink": false,
  "project_panel": { "auto_fold_dirs": false },
  "indent_guides": { "enabled": true },
  "tabs": { "file_icons": true },
  "tab_size": 2,
  "hard_tabs": true,
  "show_whitespaces": "selection",

  "lsp": {
    "rust-analyzer": {
      "initialization_options": { "check": { "command": "clippy" } }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off"
        }
      }
    }
  },

  "languages": {
    "TypeScript": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    },
    "TSX": {
      "code_actions_on_format": { "source.fixAll.eslint": true }
    }
  },

  "features": { "inline_completion_provider": "supermaven" },
  "show_inline_completions": true,

  "git": { "inline_blame": { "enabled": false } },

  "auto_install_extensions": {
    "intellij-newui-theme": true,
    "catppuccin": true,
    "new-darcula": true,
    "one-dark-pro": true,
    "github-theme": true,

    "astro": true,
    "basher": true,
    "cargo-tom": true,
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "env": true,
    "fish": true,
    "git-firefly": true,
    "golangci-lint": true,
    "graphql": true,
    "html": true,
    "http": true,
    "log": true,
    "make": true,
    "nginx": true,
    "prisma": true,
    "scss": true,
    "snippets": true,
    "sql": true,
    "svelte": true,
    "terraform": true,
    "toml": true,
    "vue": true,
    "wakatime": true,
    "xml": true
  }
}
