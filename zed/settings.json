{
  "vim_mode": true,
  "vim": { "use_system_clipboard": "always", "use_smartcase_find": true },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 10,

  "icon_theme": "JetBrains New UI Icons (Dark)",
  "theme": "JetBrains New Dark",

